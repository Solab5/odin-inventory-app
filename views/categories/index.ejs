<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
    <%- include('../header') %>
    
    <div class="container">
        <h1><i class="fas fa-tags"></i> <%= title %></h1>
        <a href="/categories/new" class="btn btn-primary"><i class="fas fa-plus"></i> Add New Category</a>
        
        <ul class="list">
            <% categories.forEach((category) => { %>
                <li class="list-item">
                    <a href="/categories/<%= category.id %>">
                        <i class="fas fa-tag"></i> <%= category.name %>
                    </a>
                </li>
            <% }) %>
        </ul>
    </div>
    
    <%- include('../footer') %>
</body>
</html>