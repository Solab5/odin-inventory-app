<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
    <%- include('../header') %>
    
    <div class="container">
        <h1><i class="fas fa-boxes"></i> <%= title %></h1>
        <a href="/items/new" class="btn btn-primary"><i class="fas fa-plus"></i> Add New Item</a>
        
        <ul class="list">
            <% items.forEach((item) => { %>
                <li class="list-item">
                    <a href="/items/<%= item.id %>">
                        <i class="fas fa-box"></i> <%= item.name %>
                    </a>
                </li>
            <% }) %>
        </ul>
    </div>
    
    <%- include('../footer') %>
</body>
</html>