<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
    <%- include('../header') %>
    
    <div class="container">
        <h1><i class="fas fa-plus-circle"></i> <%= title %></h1>
        <form action="/items" method="POST">
            <div class="form-group">
                <label for="name"><i class="fas fa-box"></i> Name:</label>
                <input type="text" name="name" required>
            </div>

            <div class="form-group">
                <label for="description"><i class="fas fa-align-left"></i> Description:</label>
                <textarea name="description" required></textarea>
            </div>

            <div class="form-group">
                <label for="price"><i class="fas fa-tag"></i> Price:</label>
                <input type="number" step="0.01" name="price" required>
            </div>

            <div class="form-group">
                <label for="stock_quantity"><i class="fas fa-cubes"></i> Stock Quantity:</label>
                <input type="number" name="stock_quantity" required>
            </div>

            <div class="form-group">
                <label for="category_id"><i class="fas fa-folder"></i> Category:</label>
                <select name="category_id" required>
                    <% categories.forEach(category => { %>
                        <option value="<%= category.id %>"><%= category.name %></option>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label for="unit_type"><i class="fas fa-ruler"></i> Unit Type:</label>
                <input type="text" name="unit_type" required>
            </div>

            <div class="actions">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add Item
                </button>
                <a href="/items" class="btn">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </div>
        </form>
    </div>
    
    <%- include('../footer') %>
</body>
</html>